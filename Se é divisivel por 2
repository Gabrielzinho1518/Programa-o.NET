namespace NumeroNegativo
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int num;
            Console.WriteLine("Digite um numero:");
            num = int.Parse(Console.ReadLine());

            if (num % 2 == 0)
            {
                Console.WriteLine("É dívisivel por 2!");
            }
            if (num % 4 == 0)
            {
                Console.WriteLine("É divisivel por 4!");
            }
            if (num % 8 == 0)
            {
                Console.WriteLine("É divisivel por 8!");
            }
            else
            {
                Console.WriteLine("Não é divisivel por 2!");
            }
        }
    }
}
